{
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/react"
    ],
    "plugins": ["prettier", "react"],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {},
        {
          "usePrettierrc": false
        }
      ]
    }
  }